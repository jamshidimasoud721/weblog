<form
    id="loginForm"
    class="form-signin text-center"
    action="/users/forget-password"
    method="POST"
>
    <a href="/">
        <img class="mb-4" src="/img/laptop.png" alt="" width="72"
             height="72">
    </a>
    <h1 class="h3 mb-3 font-weight-normal text-center">فراموشی رمز عبور</h1>
    <%- include("./includes/loginMessages.ejs") %>
    <label for="inputEmail" class="sr-only">آدرس ایمیل</label>
    <input
        type="email"
        name="email"
        id="inputEmail"
        class="form-control mb-2"
        placeholder="آدرس ایمیل"
        required
        autofocus
    />
    <button class="btn btn-lg btn-primary btn-block" type="submit">
بازیابی رمز عبور    </button>
</form>
